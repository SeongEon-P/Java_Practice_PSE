package ex_240304;

import java.util.Scanner;

public class Ex_03_class_2_Idol {

	public static void main(String[] args) {
		// Idol 클래스 사용
		Scanner sacnner = new Scanner(System.in);
		System.out.println("아이돌 그룹명을 입력해주세요>>");
		String groupNameString = scanner.next();
		
	
		System.out.println("그룹은 몇명인가요?>>");
		int groupMemberNumber = scanner.nextInt(;)
				
		System.out.println("아이돌 그룹멤버를 입력해주세(예, 공백으로 구분해서 넣기)>>");
		String[] groupMember = new String[groupMemberNumber];
		for(int i=0; i<groupMember.length; i++) {
			groupMember[i] = scanner.next();
		}
		
		System.out.println("대표 앨범 3개만 입력해주세(예, 공백으로 구분해서 넣기)>>");
		String[] groupAlbum = new String[3];
		for(int i=0; i<groupAlbum.length; i++) {
			groupAlbum[i] = scanner.next();
		}
		
		// new Idol(String groupName, String [] groupMembers;, String [] groupAlbums)
		// BTS
		Idol btsIdol = new Idol(groupNameString, groupMember, groupAlbum)
		btsIdol.introuduceMember();
		btsIdol.introduceAlbum();
		
	}

}
